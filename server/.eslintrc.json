{

    "overrides": [
        {
            "files": ["*.ts"],
            "env": {
                "browser": true,
                "es2021": true
            },
            "extends": [
                "standard",
                "plugin:prettier/recommended"
            ],
            "parser": "@typescript-eslint/parser",
            "parserOptions": {
                "ecmaVersion": 12,
                "sourceType": "module"
            },
            "plugins": [
                "@typescript-eslint"
            ],
            "rules": {
                "no-useless-constructor": "off"
            }
        },
        {
            "files": ["*.spec.ts", "*.e2e-spec.ts"],
            "env": {
                "browser": true,
                "es2021": true,
                "jasmine":true
            },
            "extends":[
                "plugin:jasmine/recommended"
              ],
              "plugins":[
                "jasmine"
              ],
            "rules": {
                "no-useless-constructor": "off"
            }
        }
    ]
    
}
